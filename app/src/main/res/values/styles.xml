<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>

        <!--        <item name="android:windowFullscreen">false</item>-->
        <!--        <item name="android:windowContentOverlay">@null</item>-->
        <!--&lt;!&ndash;<item name="android:fitsSystemWindows">false</item>&ndash;&gt;-->
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="DialogAnimation_Fade">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="cell_label" parent="AppTheme">
        <item name="fontPath">fonts/Lato-Reqular.ttf</item>
        <item name="android:textColor">@color/cell_label</item>
        <item name="android:textSize">10sp</item>

    </style>

    <style name="cell_label_bold" parent="AppTheme">
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
        <item name="android:textColor">@color/cell_label</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="cell_label_dark" parent="AppTheme">
        <item name="fontPath">fonts/Lato-Reqular.ttf</item>
        <item name="android:textColor">@color/cell_label_dark</item>
        <item name="android:textSize">8sp</item>

    </style>

    <style name="dialog_title" parent="AppTheme">
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="tab_header" parent="AppTheme">
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
        <item name="android:textColor">@color/cell_text</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="cell_text" parent="AppTheme">
        <item name="fontPath">fonts/Lato-Reqular.ttf</item>
        <item name="android:textColor">@color/cell_text</item>
        <item name="android:textSize">13sp</item>

    </style>

    <style name="button_text" parent="AppTheme">
        <item name="fontPath">fonts/Lato-Reqular.ttf</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="cell_text_bold" parent="AppTheme">
        <item name="fontPath">fonts/Lato-Black.ttf</item>
        <item name="android:textColor">@color/cell_label</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="title_text" parent="AppTheme">
        <item name="fontPath">fonts/Lato-Black.ttf</item>
        <item name="android:textColor">@color/title_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="shop_switch" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/green</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/red</item>


        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorAccent</item>

    </style>

    <style name="SwitchCompatStyle">
        <item name="thumbTint">@color/red</item>
        <item name="trackTint">@color/red</item>
    </style>
</resources>
