<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/rounded_layout"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/site_name"
                        style="@style/cell_text"
                        fontPath="fonts/Lato-Bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:letterSpacing="0.1"
                        android:text="Site Name"
                        android:textColor="@color/dark_blue"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/contract"
                        style="@style/cell_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:text="#393929"
                        android:textColor="@color/orange"
                        android:textSize="13sp" />

                </LinearLayout>

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleX="0.9"
                    android:scaleY="0.9" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/cell_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SHIFT"
                        android:textColor="@color/jumbo" />

                    <TextView
                        android:id="@+id/shift"
                        style="@style/cell_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SHIFT 1"
                        android:textColor="@color/dark_blue"
                        android:textSize="13sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        style="@style/cell_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="POSITION"
                        android:textColor="@color/jumbo" />

                    <TextView
                        android:id="@+id/position"
                        style="@style/cell_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SO"
                        android:textColor="@color/dark_blue"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/cell_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OFFICER"
                        android:textColor="@color/jumbo" />

                    <TextView
                        android:id="@+id/officer"
                        style="@style/cell_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="officer"
                        android:textColor="@color/green"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        style="@style/cell_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STATUS"
                        android:textColor="@color/jumbo" />

                    <TextView
                        android:id="@+id/status"
                        style="@style/cell_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="PENDING"
                        android:textColor="@color/reject"
                        android:textSize="12sp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/cell_text"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/jumbo"
                        android:textSize="13sp" />


                    <TextView
                        style="@style/cell_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Benjamin Tan"
                        android:textColor="@color/dark_blue"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/position"
                        style="@style/cell_text"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="#29320"
                        android:textColor="@color/orange"
                        android:textSize="13sp" />


                    <TextView
                        android:id="@+id/status"
                        style="@style/cell_text"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="PENDING"
                        android:textColor="@color/reject"
                        android:textSize="12sp" />


                    <CheckBox
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:gravity="center_vertical|right"
                        android:scaleX="0.8"
                        android:scaleY="0.8" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/cell_text"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/jumbo"
                        android:textSize="13sp" />

                    <TextView
                        style="@style/cell_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="26-May-2020, Tue"
                        android:textColor="@color/aluminum"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/position"
                        style="@style/cell_text"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="9:30 AM"
                        android:textColor="@color/aluminum"
                        android:textSize="13sp" />


                    <TextView
                        android:id="@+id/status"
                        style="@style/cell_text"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/reject"
                        android:textSize="12sp" />


                    <View
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/cell_text"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="@color/jumbo"
                        android:textSize="13sp" />


                    <TextView
                        style="@style/cell_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Eric Lee"
                        android:textColor="@color/dark_blue"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/position"
                        style="@style/cell_text"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="#14223"
                        android:textColor="@color/orange"
                        android:textSize="13sp" />


                    <TextView
                        android:id="@+id/status"
                        style="@style/cell_text"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="PENDING"
                        android:textColor="@color/reject"
                        android:textSize="12sp" />


                    <CheckBox
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:gravity="center_vertical|right"
                        android:scaleX="0.8"
                        android:scaleY="0.8" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/cell_text"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/jumbo"
                        android:textSize="13sp" />

                    <TextView
                        style="@style/cell_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="26-May-2020, Tue"
                        android:textColor="@color/aluminum"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/position"
                        style="@style/cell_text"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="9:30 AM"
                        android:textColor="@color/aluminum"
                        android:textSize="13sp" />


                    <TextView
                        android:id="@+id/status"
                        style="@style/cell_text"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/reject"
                        android:textSize="12sp" />


                    <View
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/next"
                        fontPath="fonts/Lato-Regular.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:background="@drawable/rounded_button_green"
                        android:text="CONFIRM"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/next"
                        fontPath="fonts/Lato-Regular.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:background="@drawable/rounded_button_orange"
                        android:text="RESEND"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/select_layout"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:background="@drawable/righ_rounded_layout_light_blue"
        android:gravity="center">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:src="@mipmap/right_triangle" />

    </LinearLayout>


</LinearLayout>
